<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field input-group mb-3">
    <span class="input-group-text">Email</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control", placeholder: "Enter Email Here" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field input-group mb-3">
    <span class="input-group-text">Password</span>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Leave blank if you don't want to change it" %>
  </div>

  <div class="field input-group mb-3">
    <span class="input-group-text">Password Confirmation</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Re-Enter Password" %>
  </div>

  <div class="field input-group mb-3">
   <span class="input-group-text">Current Password</span>
   <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "We need your current password to confirm your changes" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-secondary mb-3" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-secondary mb-3" %></p>

<%= link_to "Back", :back, class: "btn btn-primary mb-3" %>
