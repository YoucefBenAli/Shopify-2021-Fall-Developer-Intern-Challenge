<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-group mb-3">
    <span class="input-group-text">Email</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email Here" %>
  </div>

  <div class="field input-group mb-3">
    <span class="input-group-text">Password</span>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password Here" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-secondary mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
