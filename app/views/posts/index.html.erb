<h1 class="text-center">Public Post Feed</h1>

<div class="container w-50">
  <% @posts.each do |post| %>
    <% if !post.private or post.user == current_user %>
      <div class="p-3 mb-1 <%= 'currentUserPost' if post.user == current_user %>">
          <%= image_tag(post.image, class:"img-thumbnail")%>
          Author: <%= post.author %> |
          Title: <%= post.title %> |
          <%= link_to 'Show', post %>
          <% if post.user == current_user %> |
            <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
      </div>
    <%end%>
  <%end%>
</div>
<br>

<div class="text-center mb-5">
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary m-*-auto" %>
</div>